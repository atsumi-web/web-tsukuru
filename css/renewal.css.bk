/* --- Renewal Strategy CSS (Professional Construction Tone) --- */

:root {
    --renewal-navy: #0F172A;
    --renewal-gold: #AE8B47;
    --renewal-gold-light: #D4B068;
    --renewal-dark: #020617;
    --renewal-text: #E2E8F0;
    --renewal-text-dark: #334155;
    --renewal-accent: #38BDF8; /* Sky Blue for tech accents */
}

/* Global resets for the new design */
.construction-renewal {
    background-color: #fff;
    color: var(--renewal-text-dark);
    font-size: 16px;
    font-family: 'Noto Sans JP', sans-serif; /* ベースフォントを明示 */
    line-height: 1.8; /* 読みやすい行間に統一 */
    letter-spacing: 0.05em; /* 日本語に適した字間 */
    overflow-x: hidden;
    word-wrap: break-word; /* 長い単語での崩れ防止 */
}

.construction-renewal p {
    margin-bottom: 1.5em; /* 段落間の余白確保 */
}

.dark-bg {
    background-color: var(--renewal-navy);
    color: var(--renewal-text);
}

.container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Section Common */
section {
    padding: 100px 0;
}

@media (max-width: 768px) {
    section {
        padding: 60px 0;
    }
}

.section-badge {
    display: inline-block;
    background: var(--renewal-gold);
    color: #fff;
    font-family: 'Outfit', sans-serif;
    font-weight: 800;
    font-size: 12px;
    padding: 4px 12px;
    letter-spacing: 0.2em;
    margin-bottom: 20px;
    border-radius: 2px;
}

.section-badge.inverted {
    background: var(--renewal-navy);
}

.section-title {
    font-size: 2.2rem; /* 少しサイズを抑えて崩れ防止 */
    line-height: 1.6;
    margin-bottom: 40px;
    font-family: 'Shippori Mincho', serif;
    font-weight: 700;
}

@media (max-width: 768px) {
    .section-title {
        font-size: 1.6rem;
        line-height: 1.5;
        margin-bottom: 30px;
    }
}

/* Buttons */
.cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 20px 40px;
    font-weight: 700;
    border-radius: 4px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    gap: 10px;
    font-size: 1.1rem;
}

.cta-button.primary {
    background: #06c755; /* LINE Green */
    color: #fff;
    box-shadow: 0 10px 20px rgba(6, 199, 85, 0.2);
}

.cta-button.primary:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(6, 199, 85, 0.3);
}

.cta-button.secondary {
    background: var(--renewal-gold);
    color: #fff;
    box-shadow: 0 10px 20px rgba(174, 139, 71, 0.2);
}

/* Hero Section */
.renewal-hero {
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 80px; /* Header height offset */
    overflow: hidden;
}

.hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(15, 23, 42, 0.9) 30%, rgba(15, 23, 42, 0.2) 100%);
}

.hero-content {
    position: relative;
    z-index: 10;
    color: #fff;
    max-width: 700px;
}

.hero-tagline {
    font-family: 'Outfit', sans-serif;
    color: var(--renewal-gold);
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 20px;
}

.hero-main-copy {
    font-size: clamp(2rem, 5vw, 4rem); /* 画面幅に応じて可変 */
    font-family: 'Shippori Mincho', serif;
    line-height: 1.5; /* 行間を広げて視認性向上 */
    margin-bottom: 30px;
    font-weight: 800;
    text-shadow: 0 4px 10px rgba(0,0,0,0.3); /* 背景とのコントラスト確保 */
}

.hero-main-copy .highlight {
    color: var(--renewal-gold);
    position: relative;
    display: inline-block; /* 崩れ防止 */
}

.hero-desc {
    font-size: 1.1rem;
    line-height: 2; /* ゆったりとした行間 */
    color: #fff; /* 半透明をやめて視認性優先 */
    margin-bottom: 40px;
    border-left: 2px solid var(--renewal-gold);
    padding-left: 20px;
    max-width: 600px; /* 行長を制限して読みやすく */
    text-shadow: 0 2px 5px rgba(0,0,0,0.5);
}

.hero-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 15px;
}

.hero-note {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
}

@media (max-width: 768px) {
    .hero-overlay {
        background: linear-gradient(180deg, rgba(15, 23, 42, 0.3) 0%, rgba(15, 23, 42, 0.9) 100%); /* モバイル用グラデーション */
    }
    .hero-container {
        align-items: flex-end; /* 下寄せにして画像を見せる */
        padding-bottom: 100px;
    }
    .hero-content {
        width: 100%;
    }
    .hero-main-copy {
        font-size: 2.4rem; /* モバイルでの最適サイズ */
        line-height: 1.4;
    }
    .hero-main-copy br {
        display: block; /* モバイルでも改行を有効化 */
    }
    .hero-desc {
        font-size: 1rem;
        line-height: 1.8;
        background: rgba(0,0,0,0.5); /* 文字背景を追加して可読性確保 */
        padding: 15px;
        border-radius: 4px;
        border-left: 4px solid var(--renewal-gold);
    }
}

/* Problem Section */
.problem-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
}

.problem-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 40px;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s;
}

.problem-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--renewal-gold);
}

.p-num {
    font-family: 'Outfit', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    color: rgba(174, 139, 71, 0.3);
    margin-bottom: 20px;
    line-height: 1;
}

.problem-card h3 {
    font-size: 1.4rem;
    margin-bottom: 15px;
    color: var(--renewal-gold);
}

@media (max-width: 900px) {
    .problem-grid {
        grid-template-columns: 1fr;
    }
}

/* Solution Section */
.solution-item {
    display: flex;
    align-items: center;
    gap: 60px;
    margin-bottom: 100px;
}

.solution-item.reverse {
    flex-direction: row-reverse;
}

.s-content {
    flex: 1;
}

.s-image {
    flex: 1;
}

.s-image img {
    border-radius: 8px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    width: 100%;
}

.s-tag {
    color: var(--renewal-gold);
    font-family: 'Outfit', sans-serif;
    font-weight: 800;
    font-size: 14px;
    display: block;
    margin-bottom: 10px;
}

.s-content h3 {
    font-size: 2rem;
    margin-bottom: 20px;
    font-family: 'Shippori Mincho', serif;
}

@media (max-width: 768px) {
    .solution-item, .solution-item.reverse {
        flex-direction: column;
        gap: 30px;
        margin-bottom: 60px;
    }
}

/* Tech Section */
.tech-content {
    display: flex;
    gap: 60px;
    align-items: center;
}

.tech-visual {
    flex: 1;
    background: rgba(255, 255, 255, 0.03);
    padding: 60px;
    border-radius: 12px;
    text-align: center;
}

.tech-icons {
    font-size: 5rem;
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
}

.tech-icons .plus {
    font-size: 2rem;
    color: var(--renewal-gold);
}

.tech-visual p {
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    color: var(--renewal-gold);
}

.tech-desc {
    flex: 1;
}

.tech-list {
    list-style: none;
    padding: 0;
    margin-top: 30px;
}

.tech-list li {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.tech-list li i {
    color: var(--renewal-gold);
}

@media (max-width: 768px) {
    .tech-content {
        flex-direction: column;
    }
}

/* Flow Section */
.flow-steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-top: 50px;
}

.flow-step {
    text-align: center;
    position: relative;
}

.step-num {
    width: 60px;
    height: 60px;
    background: var(--renewal-navy);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Outfit', sans-serif;
    font-weight: 800;
    border-radius: 50%;
    margin: 0 auto 20px;
    font-size: 1.2rem;
    border: 4px solid var(--renewal-gold);
}

@media (max-width: 768px) {
    .flow-steps {
        grid-template-columns: 1fr;
    }
}

/* Price Section */
.price-card-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    max-width: 900px;
    margin: 0 auto;
}

.price-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 50px 40px;
    border-radius: 8px;
    text-align: center;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.price-card.monitor {
    border: 2px solid var(--renewal-gold);
    background: rgba(174, 139, 71, 0.05);
}

.card-label {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--renewal-gold);
    color: #fff;
    padding: 5px 20px;
    font-size: 12px;
    font-weight: 800;
    border-radius: 50px;
}

.price {
    margin: 30px 0;
}

.amount {
    font-size: 4rem;
    font-family: 'Outfit', sans-serif;
    font-weight: 800;
}

.unit {
    font-size: 1.5rem;
    margin-left: 5px;
}

.price-features {
    list-style: none;
    padding: 0;
    margin: 30px 0;
    text-align: left;
}

.price-features li {
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.price-features li i {
    color: var(--renewal-gold);
}

@media (max-width: 768px) {
    .price-card-container {
        grid-template-columns: 1fr;
    }
}

/* Profile Section */
.profile-content {
    display: flex;
    gap: 60px;
    align-items: center;
}

.profile-image {
    flex: 1;
}

.profile-image img {
    width: 100%;
    border-radius: 8px;
    filter: grayscale(1);
    transition: filter 0.5s;
}

.profile-image img:hover {
    filter: grayscale(0);
}

.profile-text {
    flex: 1.5;
}

.profile-text h3 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: var(--renewal-gold);
    font-family: 'Shippori Mincho', serif;
}

.profile-meta {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
}

.profile-meta .name {
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    font-size: 0.9rem;
    color: var(--renewal-gold);
}

.profile-meta .name-jp {
    font-size: 1.5rem;
    font-weight: 800;
}

@media (max-width: 768px) {
    .profile-content {
        flex-direction: column;
    }
}

/* Fixed LINE Button */
.fixed-line-btn {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: #06c755;
    color: #fff;
    display: flex;
    align-items: center;
    padding: 15px 25px;
    border-radius: 50px;
    text-decoration: none;
    z-index: 1000;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    transition: all 0.3s;
}

.fixed-line-btn i {
    font-size: 2rem;
    margin-right: 15px;
}

.fixed-line-btn span {
    font-size: 0.9rem;
    font-weight: 800;
    line-height: 1.2;
}

.fixed-line-btn:hover {
    transform: scale(1.05);
}

/* Header Fixes */
.site-header {
    background: rgba(15, 23, 42, 0.9) !important;
    backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(255,255,255,0.1);
    padding: 10px 0 !important;
}

.header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
}

.logo {
    gap: 10px !important;
    text-decoration: none;
}

.logo img {
    height: 40px !important;
    width: auto;
    background: #fff;
    padding: 4px;
    border-radius: 4px;
}

.logo span {
    color: #fff !important;
    font-family: 'Outfit', sans-serif;
    font-weight: 800;
    font-size: 1.2rem;
    letter-spacing: 0.05em;
}

.site-nav a {
    color: rgba(255,255,255,0.9) !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    margin-left: 25px !important;
    transition: color 0.3s;
}

.site-nav a:hover {
    color: var(--renewal-gold) !important;
}

.nav-btn {
    background: var(--renewal-gold) !important;
    color: #fff !important;
    padding: 8px 20px !important;
    border-radius: 4px !important;
    font-size: 14px !important;
    margin-left: 30px !important;
}

/* Hamburger Button Visibility */
.hamburger-btn span {
    background-color: #fff !important;
}

/* Mobile Nav Adjustments */
@media (max-width: 768px) {
    .site-header {
        padding: 15px 0 !important;
    }

    .site-nav {
        background: var(--renewal-navy) !important;
        padding-top: 80px;
        gap: 20px !important;
    }

    .site-nav a {
        margin-left: 0 !important;
        font-size: 1.2rem !important;
        color: #fff !important;
    }

    .site-nav .nav-btn {
        display: flex !important; /* Show on mobile menu */
        margin-left: 0 !important;
        margin-top: 20px;
    }
}
